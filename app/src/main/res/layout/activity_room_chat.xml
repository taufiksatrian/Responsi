<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".RoomChatActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/profile8"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnBack"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SadCat"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/imgProfile"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        android:layout_marginTop="16dp"
        android:layout_marginStart="12dp"/>
    <ScrollView
        android:id="@+id/chatlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Halo"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonwhite"
                android:layout_gravity="end"
                android:text="holaa"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Potong rambut gaya apa bre?"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Kamu nanyak"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="4dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonwhite"
                android:layout_gravity="end"
                android:text="Ente kadang kadang"
                android:textColor="@color/pink"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/chatinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="80dp"
        app:cardCornerRadius="40dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/chatlist"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/chat"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tulis sesuatu"
            android:textSize="8pt"
            android:background="@color/transparent"
            android:textColor="@color/light_gray"/>
    </androidx.cardview.widget.CardView>
    <ImageView
        android:id="@+id/pinkCircle"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@drawable/circle"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/chatinput"/>

    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@drawable/kirim"
        app:layout_constraintStart_toStartOf="@id/pinkCircle"
        app:layout_constraintEnd_toEndOf="@id/pinkCircle"
        app:layout_constraintTop_toTopOf="@id/pinkCircle"
        app:layout_constraintBottom_toBottomOf="@id/pinkCircle"/>

</androidx.constraintlayout.widget.ConstraintLayout>
